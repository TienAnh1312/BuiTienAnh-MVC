@{
    ViewData["Title"] = "Index";
}
<h2>Danh sách các cuốn sách</h2>
<style>
    /* General styling */
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 20px;
    }

    /* Form styling */
    form.form-check-inline {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 20px;
    }

    form .form-group {
        display: flex;
        gap: 15px;
    }

    .form-control {
        padding: 8px;
        font-size: 14px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        min-width: 150px;
    }

    button.btn {
        padding: 8px 15px;
        font-size: 14px;
        cursor: pointer;
    }

    button.btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
        border-radius: 5px;
    }

        button.btn-primary:hover {
            background-color: #0056b3;
        }

    a.btn-danger {
        background-color: #dc3545;
        color: white;
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
    }

        a.btn-danger:hover {
            background-color: #bd2130;
        }

    /* Table styling */
    table {
        width: 100%;
        border-collapse: collapse;
        background-color: white;
        margin-top: 20px;
        border: 1px solid #dee2e6;
    }

        table th, table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        table th {
            background-color: #343a40;
            color: white;
            font-weight: bold;
        }

        table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        table img {
            border-radius: 5px;
        }

    a.btn-sm {
        font-size: 12px;
        padding: 5px 10px;
    }

    a.btn-primary {
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
    }

        a.btn-primary:hover {
            background-color: #0056b3;
        }

</style>
@* hiển thị các combobox trên form *@
<form action="" method="post" class="form-check-inline" role="form">
    <div class="form-group">
        <select name="AuthorId" class="form-control" asp-items="@ViewBag.authors">
            <option value="">Chọn tác giả</option>
        </select>
        <select name="GenreID" class="form-control" asp-items="@ViewBag.genres">
            <option>Chọn thể loại</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    <a asp-action="Create" class="btn btn-danger">Thêm mới</a>
</form>
<hr />

@* Hiển thị danh sách các cuốn sách *@
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Tiêu đề</th>
            <th>Tác giả</th>
            <th>Thể loại</th>
            <th>Giá</th>
            <th>Hình ảnh</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.AuthorId</td>
                <td>@book.GenreId</td>
                <td>@book.Price</td>
                <td>
                    <img src="@Url.Content(book.Image)" alt="@book.Title" width="40px" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-primary">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>